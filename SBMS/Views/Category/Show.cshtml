@model SBMS.Models.CategoryViewModel
@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div id="categorySetup" class="container text-center">
    <h3>Product Category Setup</h3>


    <p>
        <button class="btn btn-info" onclick="location.href='@Url.Action("Add", "Category")'"><span class="fa fa-plus admin-action-icon"></span>Add Category</button>
    </p>
    <!-- Search form -->
    @using (Html.BeginForm())
    {
        <p class="form-inline active-cyan-4">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "search-key", @placeholder = "Search name..." }, onchange = "this.form.submit();" })
            <button type="submit" class="btn-sr"><i class="fa fa-search"></i>Search</button>
        </p>
    }

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th style="width: 5%">SL</th>
                <th style="width: 10%">
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th style="width: 20%">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th style="width: 10%">Action</th>
            </tr>
        </thead>
        @if (Model != null)
        {
            <tbody>
                @{ int sl = 1;}
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td>
                            @(sl++)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <p class="btn btn-primary btn-sm admin-action-btn">@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "admin-action" })</p>                          
                        </td>
                    </tr>
                }
            </tbody>
                    }
    </table>
</div>
