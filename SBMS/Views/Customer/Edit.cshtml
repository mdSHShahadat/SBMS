@model SBMS.Models.CustomerVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div id="customerSetup" class="container text-center">
    <h3>Customer Entry Form</h3>


    <div>
        @using (Html.BeginForm("Edit", "Customer"))
        {



        <div class="row">

            <div class="col-md-12" style="background: black"></div>
            <div class="col-md-12" style="background: aquamarine"></div>


            <div class="col-md-12" style="background:azure">

                <div class="row" style="padding: 0.5px">
                    <div class="col-sm-4">@Html.LabelFor(c => c.Code, null, new { @class = "form-group", color = "aquamarine" })</div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(c => c.Code, null, new { @class = "form-group", style = "width:100%" })
                        @Html.ValidationMessageFor(c => c.Code, null, new { @class = "text-danger" })
                    </div>

                </div>
                <div class="row" style="padding: 0.5px">
                    <div class="col-sm-4">@Html.LabelFor(c => c.Name, null, new { @class = "form-group", color = "aquamarine" })</div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(c => c.Name, null, new { @class = "form-group", style = "width:100%" })
                        @Html.ValidationMessageFor(c => c.Name, null, new { @class = "text-danger" })
                    </div>

                </div>
                <div class="row" style="padding: 0.5px">
                    <div class="col-sm-4">@Html.LabelFor(c => c.Address, null, new { @class = "form-group", color = "aquamarine" })</div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(c => c.Address, null, new { @class = "form-group", style = "width:100%" })
                        @Html.ValidationMessageFor(c => c.Address, null, new { @class = "text-danger" })
                    </div>

                </div>
                <div class="row" style="padding: 0.5px">
                    <div class="col-sm-4">@Html.LabelFor(c => c.Email, null, new { @class = "form-group", color = "aquamarine" })</div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(c => c.Email, null, new { @class = "form-group", style = "width:100%" })
                        @Html.ValidationMessageFor(c => c.Email, null, new { @class = "text-danger" })
                    </div>

                </div>
                <div class="row" style="padding: 0.5px">
                    <div class="col-sm-4">@Html.LabelFor(c => c.Contact, null, new { @class = "form-group", color = "aquamarine" })</div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(c => c.Contact, null, new { @class = "form-group", style = "width:100%" })
                        @Html.ValidationMessageFor(c => c.Contact, null, new { @class = "text-danger" })
                    </div>

                </div>
                <div class="row" style="padding: 0.5px">
                    <div class="col-sm-4">@Html.LabelFor(c => c.LolaltyPoint, null, new { @class = "form-group", color = "aquamarine" })</div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(c => c.LolaltyPoint, null, new { @class = "form-group", style = "width:100%" })
                        @Html.ValidationMessageFor(c => c.LolaltyPoint, null, new { @class = "text-danger" })
                    </div>

                </div>
                <div class="row" style="padding: 2px">
                    <div class="col-sm-4">

                        <div class="col-md-12">
                            <div>
                                @if (ViewBag.SuccessMsg != null)
                                {
                                    <p style="color: green">@ViewBag.SuccessMsg</p>
                                }
                                @if (ViewBag.FailedMsg != null)
                                {
                                    <p style="color: red">@ViewBag.FailedMsg</p>
                                }
                                @if (ViewBag.ValidationMsg != null)
                                {
                                    <p style="color: yellow">@ViewBag.ValidationMsg</p>
                                }
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-8"><input type="submit" name="Add" value="Update" /> </div>

                </div>
            </div>
            <div class="col-md-12" style="background: black"></div>
            <div class="col-md-12" style="background: aquamarine"></div>


        </div>


        }

    </div>
</div>
@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
